<Window x:Class="FaceIdentify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceIdentify"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600" MinWidth="600" MinHeight="200">
    <Grid>
        <Button x:Name="VerifyFace" Content="Verify Face" Margin="0,2,10,0" VerticalAlignment="Top" Width="64" Click="Button_Click" ScrollViewer.HorizontalScrollBarVisibility="Auto" UseLayoutRounding="True" HorizontalAlignment="Right"/>
        <ScrollViewer x:Name="ResponseCtrl" Margin="10,0,80,0">
            <ListView x:Name="ResponseLV" SelectionChanged="ResponseLV_SelectionChanged" ClipToBounds="True">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="Auto" Header="Message                                 " />
                    </GridView>
                </ListView.View>

            </ListView>
        </ScrollViewer>
        <Button x:Name="TrainBtn" Content="Train" HorizontalAlignment="Left" Margin="520,26,0,0" VerticalAlignment="Top" Width="64" Height="18" Click="TrainBtn_Click"/>

    </Grid>
</Window>
